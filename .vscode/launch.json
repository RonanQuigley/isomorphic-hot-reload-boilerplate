{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev Build",
            "program": "${workspaceFolder}/build/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "DEBUG" : "true",
                "NODE_ENV" : "development",
                "IS_BUILD" : "true"
            },
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/build/*.{js,.js.map}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod Build",
            "program": "${workspaceFolder}/build/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "DEBUG" : "true",
                "NODE_ENV" : "production",
                "IS_BUILD" : "true"
            },
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/build/*.{js,.js.map}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev",
            "smartStep": true,
            "program": "${workspaceFolder}\\index.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "DEBUG" : "true",
                "NODE_ENV" : "development",
                "IS_BUILD" : "false"            
            },
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "@babel/register"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod",
            "smartStep": true,
            "program": "${workspaceFolder}\\index.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "DEBUG" : "true",
                "NODE_ENV" : "production",
                "IS_BUILD" : "false"            
            },
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "@babel/register"
            ],
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9999
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
    ]
}