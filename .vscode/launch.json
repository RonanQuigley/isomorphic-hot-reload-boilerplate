{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Client",
            "port": 9222,
            "timeout": 1000,
            "smartStep": true,
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/node_modules/**/*.*.js",
            ],
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Server",
            "processId": "${command:PickProcess}",
            "protocol": "inspector",
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/*.{.js.map}"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js",
                "*.hbs",
                "webpack:///webpack/bootstrap",
                "webpack:\\webpack\\bootstrap",
                "webpack://webpack/bootstrap",
                "webpack/bootstrap",
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev Server Setup",
            "smartStep": false,
            "program": "${workspaceFolder}/src/server/app.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV" : "development",
                "ENABLE_LOGGING" : "false"        
            },
            "runtimeArgs": [
                "--max-old-space-size=8192",
                "--inspect",
                "--require", 
                "dotenv/config",
                "--require",
                "@babel/register"            
            ],

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod Server Setup",
            "smartStep": false,
            "program": "${workspaceFolder}/src/server/app.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV" : "production",
                "ENABLE_LOGGING" : "false"        
            },
            "runtimeArgs": [
                "--max-old-space-size=8192",
                "--inspect",
                "--require", 
                "dotenv/config",
                "--require",
                "@babel/register"            
            ],

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Build",
            "smartStep": false,
            "program": "${workspaceFolder}/webpack/webpack.config.babel.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV" : "production",
                "ENABLE_LOGGING" : "false"        
            },
            "runtimeArgs": [
                "--max-old-space-size=8192",
                "--inspect",
                "--require", 
                "dotenv/config",
                "--require",
                "@babel/register"            
            ],

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod Build - Server",
            "smartStep": true,
            "program": "${workspaceFolder}/dist/server/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {                
                "NODE_ENV" : "production",
                "ENABLE_LOGGING" : "false"
            },

        }
    ]
}