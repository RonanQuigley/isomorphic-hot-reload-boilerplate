  "scripts": {
    "build:back": "webpack -p --config webpack/back-end/webpack.prod.babel.js",
    "build:front": "webpack --config webpack/front-end/webpack.prod.babel.js",
    "build:all": "webpack --config webpack/full-stack/webpack.babel.js",
    "build:all:start": "npm-run-all -s build:all start:prod",
    "start:prod": "node ./dist/server.js",
    "start:dev": "cross-env NODE_ENV=development node --require @babel/register --require dotenv/config ./src/index.js",
    "test:front": "mocha --watch --opts mocha.opts test/front-end/**/*.test.js",
    "test:back": "mocha --opts mocha.opts test/back-end/**/*.test.js",
    "test:common": "mocha --watch --opts mocha.opts test/common/**/*.test.js",
    "test:all": "mocha --watch --opts mocha.opts test/**/*.test.js",
    "coverage:back": "nyc  --report-dir ./coverage/back npm run test:back"
